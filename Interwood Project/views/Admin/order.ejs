<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Summary</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: url('your-background-image-url.jpg') no-repeat center center fixed;
      background-size: cover;
      margin: 0;
      padding: 0;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #fff;
      margin-top: 50px;
      font-size: 2.5em;
    }

    table {
      width: 85%;
      margin: 20px auto;
      border-collapse: collapse;
      background: rgba(255, 255, 255, 0.9); /* Light transparent background */
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    th, td {
      padding: 14px;
      border-bottom: 1px solid #ccc;
    }

    th {
      background: #3498db; /* Blue header */
      color: #fff;
    }

    tr:hover {
      background: #f5f5f5;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    ul li {
      font-size: 0.9em;
      margin: 5px 0;
      color: #444;
    }

    a {
      text-decoration: none;
      color: #3498db;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
      table {
        width: 100%;
      }

      h1 {
        font-size: 2em;
      }
    }
  </style>
</head>
<body>

  <h1>Order Summary</h1>

  <table>
    <thead>
      <tr>
        <th>Customer Email</th>
        <th>Delivery Address</th>
        <th>Payment Method</th>
        <th>Ordered Products</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.email %></td>
          <td><%= order.address %></td>
          <td><%= order.paymentMethod %></td>
          <td>
            <ul>
              <% order.products.forEach(product => { %>
                <li><%= product.title %></li>
              <% }); %>
            </ul>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
